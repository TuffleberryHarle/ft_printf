    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make lib",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clang build",
            "command": "clang",
            "args": [
				"-g",
				"-Werror",
				"-Wall",
				"-Wextra",
				"tests/main_2.c",
				"gnl/get_next_line.c",
                "libftprintf.a",
                "-o",
                "ft_printf"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": ["Make lib", "Clang build"]
        }
    ]
}